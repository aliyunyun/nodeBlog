extends ../layout

block content
  != messages()
  h2.page-header 添加分类
  if errors && errors.length
    div.errors
      each error in errors
        p.alert.alert-danger= error.msg

  form.vertical-form(method="post", action=action)
    div.form-group
      label(for="title") 分类名称
      input.form-control.input-lg(name="name",placeholder="请输入分类...", required="true" value= category.name)

    button.btn.btn-lg.btn-info(type="submit")= post ? '保存修改' : '保存分类'



