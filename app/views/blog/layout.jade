extends ../layout

append css
  link(rel='stylesheet', href='/css/blog.css')
  link(rel='stylesheet', href='/components/font-awesome/css/font-awesome.css')

block main
  block header
    div.blog-masthead
      div.container
        nav.blog-nav
          if (pageName === '/')
            a.blog-nav-item.active(href="/") 首页
          else
            a.blog-nav-item(href="/") 首页

          if (pageName === '/about')
            a.blog-nav-item.active(href="/about") 关于
          else
            a.blog-nav-item(href="/about") 关于

          if (pageName === '/contact')
            a.blog-nav-item.active(href="/contact") 联系
          else
            a.blog-nav-item(href="/contact") 联系

  div.container

    div.row
      div.col-sm-8.blog-main
        block content

      .col-sm-3.col-sm-offset-1.blog-sidebar
        .sidebar-module.sidebar-module-inset

        .sidebar-module
          h4 文章分类
          ol.list-unstyled
            each category in categories
              li
                a(href='/posts/category/' + category.name)= category.name


        .sidebar-module
          h4 Elsewhere
          ol.list-unstyled
            li
              a(href='#') GitHub
            li
              a(href='#') Twitter
            li
              a(href='#') Facebook
      // /.blog-sidebar



  block footer
    footer.blog-footer
      p Blog template built for
        a(href="http://getbootstrap.com") Bootstrap
      p
        a(herf="#") Back to top
